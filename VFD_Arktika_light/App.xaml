            <Style TargetType="se:KeypadButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Button Content="{StaticResource white_calc_16x}"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>

    </Application.Resources>
        
</se:SEApplication>
